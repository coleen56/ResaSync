<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="857.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.bts.sio.resasync.controller.DashboardController">
   <children>
      <AnchorPane prefHeight="832.0" prefWidth="1280.0">
         <children>
            <VBox prefHeight="832.0" prefWidth="1280.0">
               <children>

                  <!-- HBox de navigation -->
                  <HBox prefHeight="79.0" prefWidth="1186.0" style="-fx-background-color: #d1f2eb;">
                     <children>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Hyperlink fx:id="lienReservations" layoutX="27.0" layoutY="21.0" onAction="#allerAReservation" text="Réservations">
                                 <font><Font name="Segoe UI Bold" size="22.0" /></font>
                              </Hyperlink>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Hyperlink fx:id="lienChambres" layoutX="44.0" layoutY="21.0" onAction="#allerAChambre" text="Chambres">
                                 <font><Font name="Segoe UI Bold" size="21.0" /></font>
                              </Hyperlink>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <Hyperlink fx:id="lienClients" layoutX="58.0" layoutY="21.0" onAction="#allerAClient" text="Clients">
                                 <font><Font name="Segoe UI Bold" size="22.0" /></font>
                              </Hyperlink>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="242.0">
                           <children>
                              <Hyperlink fx:id="lienConfiguration" disable="true" layoutX="46.0" layoutY="21.0" onAction="#allerAConfiguration" text="Configuration">
                                 <font><Font name="Segoe UI Bold" size="21.0" /></font>
                              </Hyperlink>
                           </children>
                        </AnchorPane>
                        <AnchorPane prefHeight="0.0" prefWidth="442.0">
                           <children>
                              <Hyperlink fx:id="lienDeconnexion" layoutX="276.0" layoutY="21.0" onAction="#Deconnexion" text="Déconnexion">
                                 <font><Font name="Segoe UI Bold" size="21.0" /></font>
                              </Hyperlink>
                           </children>
                        </AnchorPane>
                     </children>
                     <cursor><Cursor fx:constant="OPEN_HAND" /></cursor>
                  </HBox>

                  <!-- Label "Dashboard" en bas -->
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="1280.0" text="Dashboard" textFill="#056861">
                     <font><Font name="Segoe UI" size="46.0" /></font>
                     <cursor><Cursor fx:constant="CROSSHAIR" /></cursor>
                     <effect>
                        <DropShadow>
                           <color><Color opacity="0.15" /></color>
                        </DropShadow>
                     </effect>
                  </Label>

                  <!-- TabPane au centre -->
                  <TabPane prefHeight="400.0" prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE">
                     <tabs>
                        <Tab text="Réservations en cours">
                           <content>
                              <AnchorPane>
                                 <children>
                                    <TableView layoutY="-4.0" prefHeight="380.0" prefWidth="1080.0">
                                       <columns>
                                          <TableColumn prefWidth="90.0" text="Date Arrivée" />
                                          <TableColumn prefWidth="87.0" text="Date Départ" />
                                          <TableColumn prefWidth="74.0" text="Chambre" />
                                          <TableColumn prefWidth="60.0" text="Nom" />
                                          <TableColumn prefWidth="93.0" text="Prénom" />
                                          <TableColumn prefWidth="116.0" text="Nbr Personnes" />
                                       </columns>
                                    </TableView>
                                 </children>
                              </AnchorPane>
                           </content>
                        </Tab>
                        <Tab text="Statistiques">
                           <content>
                              <AnchorPane>
                                 <!-- Contenu des statistiques à ajouter ici -->
                              </AnchorPane>
                           </content>
                        </Tab>
                     </tabs>
                     <VBox.margin>
                        <Insets left="100.0" right="100.0" />
                     </VBox.margin>
                  </TabPane>

               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
