<AnchorPane prefHeight="857.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.bts.sio.resasync.controller.ChambreController">
    <children>
        <VBox prefHeight="857.0" prefWidth="1280.0">
            <children>
                <AnchorPane prefHeight="832.0" prefWidth="1280.0">
                    <children>
                        <HBox prefHeight="79.0" prefWidth="1280.0" style="-fx-background-color: #d1f2eb;">
                            <children>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <Hyperlink fx:id="lienDashboard" layoutX="36.0" layoutY="21.0" onAction="#allerADashboard" text="Dashboard">
                                            <font>
                                                <Font name="Segoe UI Bold" size="22.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <Hyperlink fx:id="lienReservation" layoutX="31.0" layoutY="21.0" onAction="#allerAReservation" text="Réservations">
                                            <font>
                                                <Font name="Segoe UI Bold" size="21.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <Hyperlink fx:id="lienClients" layoutX="58.0" layoutY="21.0" onAction="#allerAClient" text="Clients">
                                            <font>
                                                <Font name="Segoe UI Bold" size="22.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefHeight="200.0" prefWidth="242.0">
                                    <children>
                                        <Hyperlink fx:id="lienConfiguration" disable="true" layoutX="46.0" layoutY="21.0" onAction="#allerAConfiguration" text="Configuration">
                                            <font>
                                                <Font name="Segoe UI Bold" size="21.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefHeight="0.0" prefWidth="442.0">
                                    <children>
                                        <Hyperlink fx:id="lienDeconnexion" layoutX="276.0" layoutY="21.0" onAction="#Deconnexion" text="Déconnexion">
                                            <font>
                                                <Font name="Segoe UI Bold" size="21.0" />
                                            </font>
                                        </Hyperlink>
                                    </children>
                                </AnchorPane>
                            </children>
                            <cursor>
                                <Cursor fx:constant="OPEN_HAND" />
                            </cursor>
                        </HBox>
                        <TableView fx:id="tableChambres" layoutX="25.0" layoutY="170.0" prefHeight="375.0" prefWidth="808.0">
                            <columns>
                                <TableColumn fx:id="colNumChambre" prefWidth="150.0" text="Numéro" />
                                <TableColumn fx:id="colTypeChambre" prefWidth="250.0" text="Type de Chambre" />
                                <TableColumn fx:id="colStatut" prefWidth="200.0" text="Statut" />
                            </columns>
                        </TableView>
                        <Label layoutX="538.0" layoutY="102.0" text="Chambres" textFill="#056861">
                            <font>
                                <Font name="Segoe UI" size="46.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="CROSSHAIR" />
                            </cursor>
                            <effect>
                                <DropShadow>
                                    <color>
                                        <Color opacity="0.14885495603084564" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </Label>
                        <VBox alignment="CENTER" layoutX="881.0" layoutY="170.0" prefHeight="187.0" prefWidth="349.0" spacing="10" style="-fx-background-color: lightgrey;">
                            <children>
                                <Label text="Ajouter une Chambre" textFill="#056861">
                                    <font>
                                        <Font name="Segoe UI" size="24.0" />
                                    </font>
                                </Label>

                                <HBox alignment="CENTER" spacing="10">
                                    <Label text="Numéro :" />
                                    <TextField fx:id="fieldNumChambre" promptText="Ex: 101" />
                                </HBox>

                                <HBox alignment="CENTER" spacing="10">
                                    <Label text="Type :" />
                                    <ComboBox fx:id="comboTypeChambre" promptText="Choisir un type">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Lit Double" />
                                                <String fx:value="2 lits Simples" />
                                                <String fx:value="Lit Simple et 2 lits Superposés" />
                                            </FXCollections>
                                        </items>
                                    </ComboBox>
                                </HBox>

                                <Button onAction="#gererAjouterChambre" text="Ajouter" />
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
